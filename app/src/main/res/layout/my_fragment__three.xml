<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jasvir.spendingtracker.MyFragment_Two">
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/enterCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText">
    </EditText>

    <TextView
        android:id="@+id/myExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/enterCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />



    <TextView
        android:id="@+id/mySalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/enterDate"
        android:layout_alignLeft="@+id/myExpenses"
        android:layout_alignStart="@+id/myExpenses" />

    <EditText
        android:id="@+id/enterAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="text"
        android:layout_below="@+id/mySalary"
        android:layout_alignLeft="@+id/enterDate"
        android:layout_alignStart="@+id/enterDate" />

    <TextView
        android:id="@+id/myBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/enterAmount"
        android:layout_alignLeft="@+id/mySalary"
        android:layout_alignStart="@+id/mySalary" />

    <EditText
        android:id="@+id/enterDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone|text"
        android:layout_below="@+id/myExpenses"
        android:layout_alignLeft="@+id/enterCategory"
        android:layout_alignStart="@+id/enterCategory"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/myExpenses"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:text="My Balance" />

    <Button
        android:id="@+id/submit"
        android:text="Get Balance"
        android:layout_below="@+id/enterAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
